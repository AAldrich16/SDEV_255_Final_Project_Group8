<%
const activePage = 'editCourse';
%>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<%- include('./partials/head.ejs') %>
<body>
<%- include("./partials/nav.ejs", { activePage: activePage }) %>
<div class="content">
    <div class="page_header">
        <h3><i class="fa-solid fa-plus"></i> Edit Course <%= Course.name %> </h3>
    </div>
    <div class="create-a-course">
        <form method="POST" action="/editCourse/<%= Course._id %>/save">
            <div class="input-row">
                <label for="cname">course name</label>
                <input type="text" id="cname" name="name" value="<%= Course.name %>"/>
            </div>
            <div class="input-row">
                <label for="csubject">course subject</label>
                <select name="subject" id="csubject">
                    <option value="MATH">Math</option>
                    <option value="ENG">English</option>
                    <option value="SCI">Science</option>
                    <option value="HIST">History</option>
                    <option value="COMPSCI">Computer Science</option>
                </select>
            </div>
            <div class="input-row">
                <label for="cdesc">course description</label>
                <textarea id="cdesc" name="desc"><%= Course.description %></textarea>
            </div>
            <div class="input-row">
                <label for="credits">course credits</label>
                <input type="number" id="credits" name="credits" value="<%= Course.credits %>" min="0" max="10"/>
            </div>
            <div class="input-row">
                <label for="cimage">course image [URL]</label>
                <input type="text" name="image" id="cimage" value="<%= Course.image %>"/>
            </div>
            <div class="input-row">
                <label for="ccolor">course color</label>
                <input type="color" name="color" id="ccolor" value="<%= Course.color %>"/>
            </div>
            <div class="input-row">
                <label for="cteach">assign teacher</label>
                <select name="teacher" id="cteach">
                    <option value="MATH">1 - Smith, John</option>
                    <option value="ENG">2 - Wade, Roe</option>
                </select>
            </div>
            <div class="input-row">
                <input type="submit" value="update course" />
            </div>
        </form>
    </div>
</div>
</body>
</html>